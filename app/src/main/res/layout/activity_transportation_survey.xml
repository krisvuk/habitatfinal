<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="habitatfinal.habitatfinal.transportation_survey"
    android:background="#ffcae987"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/imageView5"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/transport_survey_banner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/year_spinner"
        android:layout_gravity="right" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manufacturers_spinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/models_spinner"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/model_type_spinner"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="325dp"
        android:layout_height="61dp"
        android:id="@+id/transportation_next"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/nextstep_btn"
        android:layout_marginTop="10dp"
        android:onClick="onClick"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Step 2 of 3"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
